{
	order cgi before respond
}

himbeerserver.de {
	reverse_proxy /_matrix/* localhost:8008

	root * /srv/www/static

	file_server
	templates

	redir / /md/index.md permanent

	@base {
		path /base/*
		not path /base/*.css
	}

	@markdown {
		path_regexp /md/.*\.md$
	}

	@well_known {
		path /favicon.ico
	}

	handle @markdown {
		rewrite * /base/render.html
	}

	handle @well_known {
		file_server
	}

	handle @base {
		error 403
	}

	handle_errors {
		file_server
		templates

		handle {
			rewrite * /base/error.html
		}
	}
}

www.himbeerserver.de {
	redir {scheme}://himbeerserver.de{uri} permanent
}

git.himbeerserver.de {
	root * /srv/www/static

	file_server

	@base {
		path /base/*
		not path /base/*.css
	}

	handle_path /cgit/* {
		root * /usr/share/webapps/cgit
		file_server
	}

	handle {
		cgi * /usr/share/webapps/cgit/cgit.cgi
	}

	handle @base {
		error 403
	}

	handle_errors {
		file_server
		templates

		handle {
			rewrite * /base/error.html
		}
	}
}
